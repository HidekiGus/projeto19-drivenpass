// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int @id @default(autoincrement())
  email     String @unique
  password  String
  credentials Credential[]
  safeNotes SafeNote[]
  cards Card[]
  wifis Wifi[]
}

model Credential {
  id Int @id @default(autoincrement())
  url String
  username String
  password String
  title String
  user User @relation(fields: [userId], references: [id])
  userId Int 

  @@unique([title, userId])
}

model SafeNote {
  id Int @id @default(autoincrement())
  title String
  content String
  user User @relation(fields: [userId], references: [id])
  userId Int

  @@unique([title, userId])
}

model Card {
  id Int @id @default(autoincrement())
  title String
  cardNumber String
  securityCode String
  password String
  isVirtual Boolean
  type CardType
  user User @relation(fields: [userId], references: [id])
  userId Int

  @@unique([title, userId])
}

enum CardType {
  Credit
  Debit
  Both
}

model Wifi {
  id Int @id @default(autoincrement())
  title String
  networkName String
  networkPassword String
  user User @relation(fields: [userId], references: [id])
  userId Int
}